@model ConectaCafe.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-6 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-dark border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 m-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Excluir</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-12 mb-3">
                        <div class="input-group input-group-outline mb-1">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="mb-3">
                        <form asp-action="Delete">
                            <h5 class="text-danger">Confirma a exclus√£o desta Categoria?</h5>
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> 
                            <a asp-action="Index" class="btn btn-info">Voltar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



